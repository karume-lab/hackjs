{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/api": ["./src/index.ts"],
      "@repo/api/*": ["./src/*"],
      "@repo/auth": ["../auth/src/index.ts"],
      "@repo/auth/*": ["../auth/src/*"],
      "@repo/db": ["../db/src/index.ts"],
      "@repo/db/*": ["../db/src/*"],
      "@repo/validators": ["../validators/src/index.ts"],
      "@repo/validators/*": ["../validators/src/*"],
      "@repo/types": ["../types/src/index.ts"],
      "@repo/types/*": ["../types/src/*"],
      "@repo/utils": ["../utils/src/index.ts"],
      "@repo/utils/*": ["../utils/src/*"]
    }
  },
  "include": ["src"]
}
