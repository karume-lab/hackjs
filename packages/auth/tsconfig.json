{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/auth": ["./src/index.ts"],
      "@repo/auth/*": ["./src/*"],
      "@repo/db": ["../db/src/index.ts"],
      "@repo/db/*": ["../db/src/*"],
      "@repo/types": ["../types/src/index.ts"],
      "@repo/types/*": ["../types/src/*"]
    }
  },
  "include": ["src"]
}
