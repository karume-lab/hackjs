{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/validators": ["./src/index.ts"],
      "@repo/validators/*": ["./src/*"],
      "@repo/db": ["../db/src/index.ts"],
      "@repo/db/*": ["../db/src/*"]
    }
  },
  "include": ["src"]
}
