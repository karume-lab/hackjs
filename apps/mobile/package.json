{
  "name": "mobile",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "get-ip": "bun src/scripts/get-ip.ts",
    "dev": "bun get-ip && expo start --dev-client",
    "start": "bun get-ip && expo start",
    "android": "bun get-ip && expo prebuild --clean && expo run:android",
    "ios": "expo run:ios",
    "build": "expo prebuild --clean --no-install && ./android/gradlew -p android assembleRelease",
    "install-apk": "adb install ./android/app/build/outputs/apk/release/app-release.apk",
    "build:install-apk": "bun build && bun install-apk",
    "doctor": "expo-doctor --verbose",
    "typecheck": "tsc --noEmit"
  },
  "private": true,
  "dependencies": {
    "@expo-google-fonts/outfit": "^0.4.3",
    "@hookform/resolvers": "^5.2.2",
    "@repo/assets": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/ui": "workspace:*",
    "@repo/validators": "workspace:*",
    "expo": "~54.0.33",
    "expo-constants": "~18.0.12",
    "expo-font": "~14.0.11",
    "expo-haptics": "~15.0.8",
    "expo-image": "~3.0.11",
    "expo-linking": "~8.0.10",
    "expo-router": "~6.0.19",
    "expo-splash-screen": "~31.0.12",
    "expo-status-bar": "~3.0.9",
    "expo-system-ui": "~6.0.9",
    "react": "19.1.0",
    "react-hook-form": "^7.71.2",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "zod": "^4.3.6"
  }
}
