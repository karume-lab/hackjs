{
  "expo": {
    "name": "Taskly",
    "slug": "taskly",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "../../packages/assets/mobile/icon.png",
    "scheme": "taskly",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "../../packages/assets/mobile/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.taskly.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "../../packages/assets/mobile/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.taskly.app"
    },
    "plugins": ["expo-router", "expo-font"],
    "experiments": {
      "typedRoutes": true,
      "autolinkingModuleResolution": true
    }
  }
}
