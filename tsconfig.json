{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM", "DOM.Iterable"], // Added DOM for Next.js support
    "target": "ESNext",
    "module": "ESNext", // Changed from Preserve for better cross-package compatibility
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Path Aliases (The Monorepo Secret Sauce)
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["./packages/db/src/index.ts"],
      "@repo/api": ["./packages/api/src/index.ts"],
      "@repo/auth": ["./packages/auth/src/index.ts"],
      "@repo/validators": ["./packages/validators/src/index.ts"],
      "@repo/ui/*": ["./packages/ui/src/*"]
    },

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Stricter flags for cleaner code
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": ["node_modules"]
}
